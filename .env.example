# Nexus-Atelier Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=9130
WS_PORT=9131
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexus_atelier

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=nexus-atelier
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Nexus Service URLs
MAGEAGENT_URL=http://localhost:9080
GRAPHRAG_URL=http://localhost:9090
VIDEOAGENT_URL=http://localhost:9200
FILEPROCESS_URL=http://localhost:9096
SANDBOX_URL=http://localhost:9095
AUTH_SERVICE_URL=http://localhost:9101

# Queue Configuration
QUEUE_CONCURRENCY_VIDEO=10
QUEUE_CONCURRENCY_IMAGE=50
QUEUE_CONCURRENCY_AUDIO=20

# Feature Flags
ENABLE_DRAFT_MODE=true
ENABLE_CONSENSUS_MODE=true
ENABLE_PERSONALIZATION=true

# Limits
MAX_VIDEO_DURATION=60
MAX_IMAGE_RESOLUTION=4096x4096
MAX_FILE_SIZE_BYTES=5368709120

# CORS Configuration
CORS_ORIGIN=*

# External AI Provider API Keys (Optional - for direct integration)
# OPENAI_API_KEY=sk-...
# RUNWAY_API_KEY=rw-...
# ELEVENLABS_API_KEY=el-...
# STABILITY_API_KEY=sk-...
# GOOGLE_AI_API_KEY=...
