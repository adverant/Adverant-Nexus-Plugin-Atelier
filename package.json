  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "bullmq": "^5.1.0",
    "socket.io": "^4.6.2",
    "axios": "^1.6.2",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "fluent-ffmpeg": "^2.1.2",
    "@opentelemetry/api": "^1.7.0",
